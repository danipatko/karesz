@using Microsoft.JSInterop

<div class="editor-container" id="@EditorId"></div>

@code {
    private DotNetObjectReference<Editor>? dotnetObjRef;

    [Inject]
    public IJSInProcessRuntime JsRuntime { get; set; }

    [Inject]
    public WorkspaceService Workspace { get; set; }

    [Parameter]
    public string Code { get; set; } = string.Empty;

    [Parameter]
    public EventCallback<string> CodeChanged { get; set; }

    [Parameter]
    public string EditorId { get; set; } = "monaco-editor";

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            dotnetObjRef = DotNetObjectReference.Create(this);
            this.JsRuntime.InvokeVoid("Editor.create", EditorId, this.Code, dotnetObjRef);
        }

        base.OnAfterRender(firstRender);
    }

    [JSInvokable]
    public void updateCode(string code)
    {
        Code = code;
    }

    [JSInvokable]
    public async Task getCompletionItems(string code, int offset)
    {
        Code = code;
        Console.WriteLine($"Received {offset}");
        await WorkspaceService.TabComplete(code, offset);
    }
}
